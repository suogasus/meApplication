<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.suo.mysqlite.MainActivity">

    <TextView
        android:id="@+id/tv_name"
        android:text="姓名"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_name"
        android:layout_toRightOf="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bt_submit"
        android:text="insert"
        android:layout_below="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/bt_query"
        android:text="query"
        android:layout_below="@+id/bt_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/bt_delete"
        android:text="delete"
        android:layout_below="@+id/bt_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/green"
        />

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_below="@+id/bt_delete"
        android:src="@drawable/castle"
        android:layout_width="wrap_content"
        android:layout_height="100dp" />
    <ImageView
        android:id="@+id/iv_an_castle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/bt_delete"
        android:layout_toRightOf="@+id/iv_icon"/>


        <ToggleButton
            android:id="@+id/tb_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_icon"
            android:textOn="不显示"
            android:textOff="显示"
            />
        <ImageView
            android:id="@+id/iv_tree"
            android:layout_below="@id/tb_button"
            android:layout_centerHorizontal="true"
            android:layout_width="100dp"
            android:layout_height="100dp" />



</RelativeLayout>
